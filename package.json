{
  "name": "user-service",
  "version": "1.0.0",
  "description": "User management service",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "vercel-build": "npm run build",
    "dev:client": "cd client && npm run dev",
    "dev:server": "npm run dev",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "install:all": "npm install && cd client && npm install",
    "build:all": "npm run build && cd client && npm run build",
    "seed": "ts-node-dev --transpile-only -r dotenv/config src/scripts/seed.ts",
    "seed:force": "ts-node-dev --transpile-only -r dotenv/config src/scripts/seed.ts --force",
    "clear:db": "ts-node-dev --transpile-only -r dotenv/config src/scripts/clearDatabase.ts"
  },
  "engines": {
    "node": ">=18.x"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cors": "^2.8.17",
    "@vercel/node": "^3.0.7",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0",
    "concurrently": "^8.2.2"
  }
}

