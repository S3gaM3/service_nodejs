# Database Configuration
# ============================================
# ВАЖНО: Проект автоматически определяет использование Vercel Postgres
# Если переменная POSTGRES_URL присутствует - используется Vercel Postgres
# Если POSTGRES_URL отсутствует - используются переменные DB_* для локальной разработки
# ============================================

# Для Vercel Postgres (автоматически создается Vercel при подключении базы данных):
# POSTGRES_URL создается автоматически Vercel, не нужно добавлять вручную!
# Формат: postgresql://user:password@host:port/database?sslmode=require

# Для локальной разработки используйте отдельные переменные:
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=user_service
# DB_SSL=true  # Раскомментируйте, если локальная БД требует SSL

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Server
PORT=3000
NODE_ENV=development

